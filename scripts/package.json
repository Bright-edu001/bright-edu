{
  "name": "bright-edu-sync-server",
  "version": "1.0.0",
  "description": "Google Sheets 同步服務器",
  "main": "localSyncServer.js",
  "scripts": {
    "start": "node localSyncServer.js",
    "dev": "nodemon localSyncServer.js",
    "docker:build": "docker build -t bright-edu-sync .",
    "docker:run": "docker run -p 3002:3002 --env-file .env bright-edu-sync",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=bright-edu-sync)"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "firebase-admin": "^12.0.0",
    "googleapis": "^128.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
